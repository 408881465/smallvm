spec 'r' 'OK capacitive' 'capacitive OK' ''
spec 'r' 'cancel capacitive' 'capacitive ✖' ''
spec 'r' 'up capacitive' 'capacitive 🔺' ''
spec 'r' 'down capacitive' 'capacitive 🔻' ''
spec 'r' 'left capacitive' 'capacitive ◀️' ''
spec 'r' 'right capacitive' 'capacitive ▶️' ''

to 'OK capacitive' {
  local 'value' ('[sensors:touchRead]' 15)
  repeat 4 {
    waitMillis 1
    value += ('[sensors:touchRead]' 15)
  }
  return (value <= 100)
}

to 'cancel capacitive' {
  local 'value' ('[sensors:touchRead]' 14)
  repeat 4 {
    waitMillis 1
    value += ('[sensors:touchRead]' 14)
  }
  return (value <= 100)
}

