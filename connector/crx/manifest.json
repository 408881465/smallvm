{
    "name": "µBlocks serial connector",
    "description": "µBlocks serial to webSocket bridge",
    "version": "0.3",
    "manifest_version": 2,
    "app": {
        "background": {
            "scripts": [ "background.js" ]
        }
    },
    "permissions": [
        "serial"
    ],
    "sockets": {
        "tcp": {
            "connect": "*"
        },
        "tcpServer": {
            "listen": "*"
        }
    },
    "icons": { "16": "icon-16.png", "128": "icon-128.png" }
}
